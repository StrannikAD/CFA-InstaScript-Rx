<header class="secondary">
  <div class="background-image-holder parallax-background overlay" data-stellar-background-ratio="0.9">
      <<%= image_tag('bg-5.jpg', class: 'background-image', alt: 'Background Image') %>
  </div>

  <div class="container align-vertical hero">
    <div class="row">
      <div class="col-md-5 text-left">
        <h1>Instant Shipping</h1>
        <p>
        <small>InstaScript is an on-demand delivery network. Once your order is picked up, youâ€™ll receive a text message with a link to track your delivery in real time on the map. So you always know exactly when it will arrive. </small>
    </p>
      </div>
    </div><!--end of row-->
  </div><!--end of container-->
</header>

<section class="product-list">
  <div class="container">
    <div class="col-md-12">
      <h2>Cart Details</h2>
      <br>
      <%= render 'carts/cart' %>
      <br>
      <h5>Total: <%= number_to_currency @cart.total_price %></h5>
      <br>
      <%= button_to 'Checkout', new_order_path, method: :get %>
      <br>
      <%= link_to 'Back to Store', shop_path %>
      <br>
      <%= link_to 'Empty Your Cart', @cart, method: :delete, data: {confirm: 'You sure?'} %>
    </div>
  </div>
</section>