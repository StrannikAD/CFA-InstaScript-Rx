<!DOCTYPE html>
<html>
<head>
  <title>MyStore</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'http://fonts.googleapis.com/css?family=Raleway:400,700,600,500,300' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	
	<!-- Off screen navigation -->
	<div id="sidr">
	<ul>	
		<li>
		  <%= link_to '#', class: "side-logo" do %>
		    MyStore
		    <span class="logo-dot accent-bg"></span>
	    <% end %>
		</li>
		<li class="active">
		  <%= link_to 'Store', root_path %>
		</li>
		<li class="divider"><span></span></li>
		<li>
		  <%= link_to 'Privacy', root_path %>
		</li>
		<li>
		  <%= link_to 'Terms & conditions', root_path %>
		</li>
	</ul>

	<div class="side-social">
		<a href="#"><i class="fa fa-facebook"></i></a>
		<a href="#"><i class="fa fa-twitter"></i></a>
		<a href="#"><i class="fa fa-google-plus"></i></a>
		<a href="#"><i class="fa fa-pinterest"></i></a>
		<a href="#"><i class="fa fa-instagram"></i></a>
	</div>
</div>

  <div class="nav-container">
		<nav class="navbar navbar-default">
			<div class="container">
				<!-- Brand and toggle get grouped for better mobile display -->
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#collapse-navigation" aria-expanded="false">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					</button>
					<%= link_to root_path, class: 'navbar-brand' do %>
					  Store<span class="logo-dot accent-bg"></span>
					<% end %>
					<a href="#sidr" class="side-menu-opener mobile">
						<div class="bars">
					    <span class="bar top"></span>
					    <span class="bar middle"></span>
					    <span class="bar bottom"></span>
					  </div>
					</a>
				</div>
	
				<!-- Collect the nav links, forms, and other content for toggling -->
				<div class="collapse navbar-collapse" id="collapse-navigation">
					<ul class="nav navbar-nav">
						<li>
						  <%= link_to 'Home', root_path %>
						</li>
						<li>
						  <%= link_to 'Store', root_path %>
						</li>
						<li>
						  <%= link_to 'About', root_path %>
						</li>
						<li>
						  <%= link_to root_path do  %>
						    <i class="fa fa-paper-plane"></i> Contact
						  <% end %>
						</li>
						<li>
						  <%= link_to root_path, class: 'menu-cart' do  %>
						    <i class="fa fa-shopping-cart"></i> $0.00
						  <% end %>
						</li>
					</ul>
					<ul class="nav navbar-nav navbar-right">
						<li>
							<a href="#sidr" class="side-menu-opener">
								<div class="bars">
							    <span class="bar top"></span>
							    <span class="bar middle"></span>
							    <span class="bar bottom"></span>
							  </div>
							</a>
						</li>
					</ul>
				</div><!-- /.navbar-collapse -->
			</div><!-- /.container -->
		</nav>
  </div>

<div class="main-container">
	
	<%= yield %>

	<section class="newsletter accent-bg">
		<div class="background-image-holder overlay accent">
			<%= image_tag('bg-4.jpg', class: 'background-image', alt:'Background') %>
		</div>
		<div class="container">
			<div class="row">
				<div class="col-md-5 text-left">
					<h2 class="page-title">Join our newsletter</h2>
					<p>Bemporibus autem quibusdam et aut officiis debitis autem quibusdam et aut officiis debitis.</p>
				</div>
				<div class="col-md-4">
					<form class="newsletter-form">
						<input type="text" name="email" id="email" placeholder="Your email address">
					</form>
				</div>
				<div class="col-md-3">
					<%= link_to 'Join Now', root_path, class: 'btn btn-primary' %>
				</div>
			</div><!--end of row-->
		</div><!--end of container-->
	</section>

	<footer class="footer">
		<div class="container">
			<div class="row">
				<div class="col-md-6 col-md-offset-3">
					<ul class="footer-navigation">
						<li class="active">
						  <%= link_to 'Home', root_path %>
						</li>
						<li>
						  <%= link_to 'Store', root_path %>
						</li>
						<li>
						  <%= link_to 'About', root_path %>
						</li>
						<li>
						  <%= link_to root_path do %>
						    <i class="fa fa-paper-plane"></i> Contact
						  <% end %>
						</li>
					</ul>
					<ul class="accepted-payments">
						<li>
						  <%= link_to root_path do %>
						    <i class="fa fa-cc-amex"></i>
						  <% end %>
						</li>
						<li>
						  <%= link_to root_path do %>
						    <i class="fa fa-cc-visa"></i>
						  <% end %>
						</li>
						<li>
						  <%= link_to root_path do %>
						    <i class="fa fa-paypal"></i>
						  <% end %>
						</li>
						<li>
						  <%= link_to root_path do %>
						    <i class="fa fa-cc-stripe"></i>
						  <% end %>
						</li>
						<li>
						  <%= link_to root_path do %>
						    <i class="fa fa-cc-mastercard"></i>
						  <% end %>
						</li>
					</ul>
					<div class="copyright">
						<p>Copyright Â© 2016. rubyonrails.pro</p>
					</div>
				</div>
			</div><!-- /.row -->
		</div><!-- /.container -->
	</footer>
	
  </div><!-- /.main-container -->

</body>
</html>